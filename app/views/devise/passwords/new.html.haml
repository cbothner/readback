.small-container
  %h1
    Forgot your Password?

  = simple_form_for resource,
                    as: resource_name, url: password_path(resource_name),
                    html: { method: :post }, builder: BlueprintFormBuilder do |f|
    = f.errors

    = f.form_group :email do |f, error_classes|
      = f.email_field :email, class: %w[pt-input pt-fill] + error_classes

    = f.submit "Send Me Reset Password Instructions",
               data: {disable_with: 'Sending...'}

  .margin-top
    = render "devise/shared/links"
