%header.main-header.max-width-container
  .main-header__logo
    = link_to root_path do
      = image_tag asset_path('wcbn.svg'), class: 'wcbn-logo'

    %span.player-widget
      = image_tag asset_path('icons/play.svg'), class: 'player-widget__button'
      %a{ href: '#' } Listen Live

  %nav.main-header__nav
    = link_to 'About', page_path('about')
    = link_to 'Events', events_path
    = link_to 'Schedule', semester_path(Semester.current)
    = link_to 'Playlist', playlist_index_path
    = link_to 'Donate', page_path('donate')
