<!DOCTYPE html>
<html>
<head>
  <title>
    WCBN-FM <%= content_for?(:title) ? " â€” " + content_for(:title): "" %>
  </title>

  <%= stylesheet_link_tag 'redesign', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>

<body>
  <% if flash[:notice] %>
    <div class="flash flash--notice">
      <p><%= flash[:notice] %></p>
    </div>
  <% end %>
  <% if flash[:alert] %>
    <div class="flash flash--alert">
      <p><%= flash[:alert] %></p>
    </div>
  <% end %>

  <%= render 'application/user_nav' %>
  <%= render 'application/main_header' %>

  <div class="max-width-container">
    <div class="with-sidebar__container">
      <% if content_for?(:sidebar) %>
        <aside class="with-sidebar__sidebar">
          <%= yield :sidebar %>
        </aside>
      <% end %>

      <main class="with-sidebar__main">
        <%= yield %>
      </main>

      <% unless content_for?(:sidebar) %>
        <aside class="with-sidebar__sidebar">
          <%= render 'application/sidebar' %>
        </aside>
      <% end %>
    </div>
  </div

  <% if Rails.env.production? %>
  <script>
  (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
   (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
   m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
   })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

  ga('create', 'UA-79717422-1', 'auto');
  ga('send', 'pageview', 'app/'+window.location.pathname);

  </script>
  <% end %>
</body>
</html>
