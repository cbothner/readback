- title "DJs"
- headline "WCBN DJs"
- subtitle link_to "Print phone list", djs_path( format: :pdf )

%table.dj-roster
  %thead
    %td Active?
    %td ID
    %td.width4 Name
    %td.width3 UM Affiliation
    %td UMID
    %td Phone
    %td Email
    %td Last Signed In
  - @djs.each do |dj|
    %tr
      %td{class: ("accent" if !dj.active)}
        = best_in_place dj, :active, as: :checkbox
      %td=dj.id
      %td
        = link_to dj do
          =dj.to_s
        = " (#{dj.dj_name.blank? ? dj.name.split(' ')[1..-1]*' ' : dj.name})"
      %td
        = dj.um_dept
        = Person::AFFILIATION_NAMES[dj.um_affiliation]
      %td=dj.um_id
      %td=dj.phone
      %td=mail_to dj.email
      %td
        = time_ago_in_words(dj.last_sign_in_at) rescue "â€“"
